<body id = "editBody">
<h1>EDIT THE PERSON</h1>

<%= form_for :person, url: person_path(@person), method: :patch do |f| %>
    <p id = "editName">
        <%= f.label :name %><br>
        <%= f.text_area :name %>
    </p>
  
    <p id = "editWeight">
        <%= f.label :weight %><br>
        <%= f.text_area :weight %>
    </p>
  
    <p id = "editHeight">
        <%= f.label :height %><br>
        <%= f.text_area :height %>
    </p>
    
    <p id = "editColor">
        <%= f.label :color %><br>
        <%= f.text_area :color %>
    </p>
 
  <p>
    <%= f.submit %>
  </p>

<% end %>
<%= link_to 'Back', people_path %>
</body>